// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// NEXT-AUTH REQUIRED MODELS
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// CUSTOM APP MODELS

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique // Optional for Steam
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // Custom Competitive Stats
  steamId       String?   @unique
  totalHours    Int       @default(0)
  countryCode   String?
  
  // Customization
  mainSide      String?   // "SURVIVOR", "INFECTED", "BOTH"
  survivorWeapon String?  // "SMG", "SHOTGUN", "BOTH"
  
  communication String?   // "MIC_ACTIVE", "ONLY_INFO", "LISTEN", "NO_MIC"
  skillLevel    String?   // "CASUAL", "SEMI_COMP", "COMPETITIVE", "TOURNAMENT"
  bio           String?   // Max 140 chars
  
  isPremium     Boolean   @default(false)
  profileTheme  String    @default("DEFAULT") // "DEFAULT", "GOLD", "DIAMOND", "RUBY", "EMERALD", "VOID"

  rating        Int       @default(1000) // ELO
  rank          String    @default("Unranked")
  role          String    @default("Newcomer")
  
  wins          Int       @default(0)
  losses        Int       @default(0)
  winRate       Float     @default(0.0)
  
  // Relations
  teamId        String?
  team          Team?     @relation(fields: [teamId], references: [id])
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  messages      Message[]
}

model Team {
  id          String   @id @default(cuid())
  name        String   @unique
  tag         String   @unique
  logoUrl     String?
  description String?
  countryCodes String? // Comma separated ISO codes: "MX,PE,AR"
  maxMembers    Int      @default(5)
  
  ownerId     String // Captain SteamID
  
  members     User[]
  
  rating      Int      @default(1000)
  wins        Int      @default(0)
  losses      Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Match {
  id          String   @id @default(cuid())
  mapName     String
  winnerTeam  String?  // ID of winning team or "draw"
  
  teamAId     String?
  teamBId     String?
  
  createdAt   DateTime @default(now())
}

model Message {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
